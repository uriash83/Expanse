@model Expanse.Models.Models.CryptoCurrency
@{
    ViewData["Title"] = "Create";// bo tytul jest w _Layout

}
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Add New Crypto</h2>
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter crypto name" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Ticker" class="form-label">Ticker</label>
                <input asp-for="Ticker" class="form-control" placeholder="Enter crypto ticker" required />
                <span asp-validation-for="Ticker" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="IsFiduciary" class="form-check-input" type="checkbox" id="IsFiduciaryCheckbox">
                <label asp-for="IsFiduciary" class="form-check-label">Is Fiduciary</label>
            </div>

            <div class="mb-3">
                <label asp-for="Info" class="form-label">Info</label>
                <textarea asp-for="Info" class="form-control" placeholder="Optional information about crypto"></textarea>
                <span asp-validation-for="Info" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <input type="submit" value="Create" class="btn btn-primary">Save</input>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

</body>
